{% case media.media_type %}
  {% when 'image' %}
    {{ media | image_url: width: 640 | image_tag }}
  {% when 'external_video' %}
    {{ media | external_video_tag: class: "w-full h-80 object-cover" }}
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: "w-full h-80 object_cover" }}
  {% else %}
    {{ media | media_tag }}
{% endcase %}