{% if pagination.pages > 0 %}
  <nav class="inline-flex justify-end items-center gap-x-1" aria-label="Pagination">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" aria-label="{{ 'general.pagination.previous' | t }}">
        {% render 'icon-chevron-left-regular', svg_class: "shrink-0 size-3" %}{{ 'general.pagination.previous' | t }}
      </a>
      {% else %}
        <span href="{{ pagination.previous.url }}" class="min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-gray-800 focus:outline-none focus:bg-gray-100 opacity-50 pointer-events-none" aria-label="{{ 'general.pagination.previous' | t }}">
          {% render 'icon-chevron-left-regular', svg_class: "shrink-0 size-3" %}{{ 'general.pagination.previous' | t }}
        </span>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="min-h-[38px] min-w-[38px] flex justify-center items-center text-gray-800 hover:bg-gray-100 py-2 px-3 text-sm rounded-lg focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none">
          {{ part.title }}
        </a>
        {% else %}
          <span href="{{ part.url }}" class="min-h-[38px] min-w-[38px] flex justify-center items-center bg-gray-200 text-gray-800 py-2 px-3 text-sm rounded-lg focus:outline-none focus:bg-gray-300 disabled:opacity-50 disabled:pointer-events-none" aria-current="page">
            {{ part.title }}
          </span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none" aria-label="{{ 'general.pagination.next' | t }}">
        {{ 'general.pagination.next' | t }}{% render 'icon-chevron-right-regular', svg_class: "shrink-0 size-3" %}
      </a>
      {% else %}
        <span href="{{ pagination.next.url }}" class="min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-gray-800 focus:outline-none focus:bg-gray-100 opacity-50 pointer-events-none" aria-label="{{ 'general.pagination.next' | t }}">
          {{ 'general.pagination.next' | t }}{% render 'icon-chevron-right-regular', svg_class: "shrink-0 size-3" %}
        </span>
    {% endif %}
  </nav>

<!-- Pagination -->
